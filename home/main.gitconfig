[merge]
    tool = vimdiff

####### Git Delta Tool
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    line-numbers = true
    syntax-theme = "Coldark-Dark"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
###### End Git Delta Tool
